# .env.active

# ======================
# Embedding settings
# ======================
# Dùng HuggingFace embeddings (384 chiều)
USE_LOCAL_EMB=1
LOCAL_EMB_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBED_BATCH_SIZE=16

# Nếu bạn muốn chuyển sang OpenAI embeddings (1536 chiều) trong tương lai,
# chỉ cần đổi USE_LOCAL_EMB=0 và EMBED_MODEL=text-embedding-3-small
# EMBED_MODEL=text-embedding-3-small

# ======================
# OpenAI settings
# ======================
# !!! Tự thay YOUR_NEW_KEY bằng key mới từ OpenAI
OPENAI_API_KEY=sk-xxxxxxx
OPENAI_MODEL=gpt-4o-mini

# ======================
# Vector store settings
# ======================
# Đảm bảo cả build_index và app.py đều dùng cùng thư mục
VECTOR_DIR=vector_store
PERSIST_DIR=vector_store

# ======================
# LLM mode
# ======================
# Có thể là OPENAI hoặc OLLAMA
LLM_MODE=OPENAI
LLM_TEMPERATURE=0.2
